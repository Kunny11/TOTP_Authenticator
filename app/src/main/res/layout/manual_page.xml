<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/accountnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account Name" />

        <EditText
            android:id="@+id/issuerEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Issuer" />

        <EditText
            android:id="@+id/seed32EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seed32" />

        <EditText
            android:id="@+id/timeStepEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Step (seconds)"
            android:inputType="number" />

        <EditText
            android:id="@+id/totpLengthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TOTP Length"
            android:inputType="number" />

        <EditText
            android:id="@+id/algorithmEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Algorithm (e.g., SHA1, SHA256)" />

        <Button
            android:id="@+id/generateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generate" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
